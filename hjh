/* ---------------------- Components ---------------------- */
function ServiceCard({ title, bullets, cta }) {
  return (
    <div className="rounded-2xl bg-white border p-6 flex flex-col">
      <h3 className="text-lg font-semibold">{title}</h3>
      <ul className="mt-3 text-sm text-gray-700 space-y-1 list-disc list-inside">
        {bullets.map((b, i) => <li key={i}>{b}</li>)}
      </ul>
      <a href={cta} className="mt-4 inline-flex w-max px-4 py-2 rounded-2xl bg-emerald-600 text-white hover:bg-emerald-700">Get Quote</a>
    </div>
  );
}

function Testimonial({ name, text }) {
  return (
    <div className="rounded-2xl border p-5 bg-white">
      <div className="text-sm text-gray-700">“{text}”</div>
      <div className="mt-3 text-xs font-semibold">— {name}</div>
    </div>
  );
}

function Input({ label, name, type = 'text', required }) {
  return (
    <label className="block">
      <span className="text-sm font-medium">{label}{required && <span className="text-rose-600"> *</span>}</span>
      <input name={name} type={type} required={required} className="mt-1 w-full rounded-xl border px-3 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-600" />
    </label>
  );
}

function Textarea({ label, name, placeholder }) {
  return (
    <label className="block">
      <span className="text-sm font-medium">{label}</span>
      <textarea name={name} placeholder={placeholder} rows={5} className="mt-1 w-full rounded-xl border px-3 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-600" />
    </label>
  );
}

function Select({ label, name, children }) {
  return (
    <label className="block">
      <span className="text-sm font-medium">{label}</span>
      <select name={name} className="mt-1 w-full rounded-xl border px-3 py-2 bg-white focus:outline-none focus:ring-2 focus:ring-emerald-600">{children}</select>
    </label>
  );
}

// NEW: Define the missing Faq component to fix "Faq is not defined" error
function Faq({ q, a }) {
  return (
    <div className="py-4">
      <div className="text-lg font-semibold">{q}</div>
      <div className="mt-2 text-gray-600">{a}</div>
    </div>
  );
}

/* ---------------------- Developer Sanity Tests ---------------------- */
(function runDevTests(){
  try {
    console.assert(typeof Faq === 'function', 'TEST: Faq should be defined');
    console.assert(typeof ServiceCard === 'function', 'TEST: ServiceCard should be defined');
    console.assert(typeof Testimonial === 'function', 'TEST: Testimonial should be defined');
    console.assert(typeof Input === 'function' && typeof Textarea === 'function' && typeof Select === 'function', 'TEST: Form components defined');

    // Smoke-test: components return a truthy element
    const el1 = Faq({ q: 'Q?', a: 'A.' });
    const el2 = ServiceCard({ title: 'T', bullets: ['x'], cta: '#' });
    console.assert(!!el1 && !!el2, 'TEST: Components return elements');
    
    // Edge-case: ServiceCard bullets can be empty
    const el3 = ServiceCard({ title: 'No bullets', bullets: [], cta: '#' });
    console.assert(!!el3, 'TEST: ServiceCard handles empty bullets');
  } catch (err) {
    console.warn('Dev tests skipped or failed:', err);
  }
})();
